<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="TextView" />

            <Button
                android:id="@+id/bt_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="591dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_ac"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"

                    android:layout_height="119dp"
                    android:layout_weight="1"
                    android:text="Button"
                    android:textSize="20sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/micolor" />

                <Button
                    android:id="@+id/bt_srd"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="122dp"
                    android:layout_weight="1"
                    android:text="Button"
                    android:textSize="20sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/micolor" />

                <Button
                    android:id="@+id/bt_porcentaje"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="123dp"
                    android:layout_weight="1"
                    android:text="Button"
                    android:textSize="20sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/micolor" />

                <Button
                    android:id="@+id/bt_division"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:text="Button"
                    android:textSize="20sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/micolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_7"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_8"
                    android:layout_width="wrap_content"
                    android:layout_height="124dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_9"
                    android:layout_width="wrap_content"
                    android:layout_height="117dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_multiplicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="123dp"
                    android:layout_weight="1"
                    android:text="Button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_4"
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_5"
                    android:layout_width="wrap_content"
                    android:layout_height="132dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_6"
                    android:layout_width="wrap_content"
                    android:layout_height="131dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_resta"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:layout_weight="1"
                    android:text="Button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="111dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="111dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="107dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_suma"
                    android:layout_width="wrap_content"
                    android:layout_height="116dp"
                    android:layout_weight="1"
                    android:text="Button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_0"
                    android:layout_width="wrap_content"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_coma"
                    android:layout_width="wrap_content"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    android:text="Button" />

                <Button
                    android:id="@+id/bt_resultado"
                    android:layout_width="wrap_content"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    android:text="Button" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>